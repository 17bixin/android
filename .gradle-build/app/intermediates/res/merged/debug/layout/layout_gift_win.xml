<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#cc000000"
    android:orientation="vertical">

    <EditText
        android:id="@+id/send_edit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:background="@null"
        android:gravity="center_vertical|left"
        android:hint="送礼可以捎上一句悄悄话哦"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="#cccccc"
        android:textColorHint="#cccccc"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <com.alens.ui.gridviewpager.GridViewPager
        android:id="@+id/mGridViewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/giftToolBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/toolbox_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="4321"
            android:textColor="#FDB203" />

        <ImageView
            android:id="@+id/tooliv_face"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/toolbox_tv_num"
            android:src="@drawable/ic_xinbi_count" />

        <TextView
            android:id="@+id/tv_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/tooliv_face"
            android:clickable="true"
            android:text="充值>"
            android:textColor="#FDB203" />

        <TextView
            android:id="@+id/toolbox_tv_gift_num_dsc"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/shape_follow_item_text1"
            android:gravity="center"
            android:text="赠送"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>


