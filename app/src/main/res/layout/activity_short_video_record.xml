<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEFD5">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--  视频流采集区  -->
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.gestures.heart.base.view.VideoProgressView
            android:id="@+id/videoProgressView"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#26000000" />

        <include
            android:id="@+id/layout_record_tool"
            layout="@layout/layout_record_top_bar" />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_face_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_face_btn" />

        <include
            android:id="@+id/layout_record_buttom"
            layout="@layout/layout_record_buttom_bar" />

        <com.gestures.heart.base.view.tab.CommonTabLayout
            android:id="@+id/layout_record_tab"
            xmlns:tl="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            tl:tl_tab_padding="20dp"
            tl:tl_iconVisible="false"
            tl:tl_indicator_corner_radius="2dp"
            tl:tl_indicator_height="5dp"
            tl:tl_indicator_width="5dp"
            tl:tl_indicator_color="@android:color/white"
            tl:tl_textsize="12sp"
            tl:tl_textSelectColor="@android:color/white"
            tl:tl_textUnselectColor="@color/gray"/>

    </LinearLayout>
</FrameLayout>