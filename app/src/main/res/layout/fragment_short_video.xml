<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gestures.heart.home.fragment.ShortVideoFragment">

    <com.gestures.heart.ui.tab.CommonTabLayout xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:id="@+id/top_tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/e6_register_start"
        tl:tl_indicator_corner_radius="2dp"
        tl:tl_indicator_height="5dp"
        tl:tl_indicator_width="5dp"
        tl:tl_tab_padding="20dp"
        tl:tl_textSelectColor="@color/e6_register_start"
        tl:tl_textUnselectColor="@color/gray"
        tl:tl_textsize="14sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>